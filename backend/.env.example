# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Server Port
PORT=3000

# JWT Configuration - Generate strong random secrets for production
JWT_SECRET=your_super_secret_jwt_key_here_should_be_long_and_complex_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_should_be_different_and_long_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# Environment
NODE_ENV=production